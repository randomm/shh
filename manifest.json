{
  "name": "Shh!",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Remove all cookies related to hs.fi",
  "icons": { 
    "16" : "images/icon.png",
    "48" : "images/48.png",
    "128" : "images/128.png"
  },
  "permissions": [
    "cookies"
  ],  
  "homepage_url": "https://github.com/randomm/shh",
  "browser_action": {
    "default_icon": "images/icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}